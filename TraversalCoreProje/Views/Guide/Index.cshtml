@model List<EntityLayer.Concrete.Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}
<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container">
            <h2 class="title">Rehberlerimiz</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span>Rehberlerimiz</li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<section class="w3l-team" id="team">
    <div class="team-block py-5">
        <div class="container py-lg-5">
            <div class="title-content text-center mb-lg-3 mb-4">
                <h6 class="sub-title">Ekip Arkadaşlarımız</h6>
                <h3 class="hny-title">Rehberlerimizle Tanışın</h3>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {
                    @if (item.Status == true)
                    {
                        <div class="col-lg-3 col-6 mt-lg-5 mt-4">
                            <div class="box16">
                                <a href="/Guide/GuideDetails/@item.GuideID">
                                    <img src="/userimages/@item.Image" style="width:330px; height:400px;" alt="" class="img-fluid" />
                                    <div class="box-content">
                                        <h3 class="title" style="color:white;">@item.Name</h3>
                                        <span class="post" style="color:white;">@item.Description</span>
                                        <ul class="social">
                                            <li>
                                                <a href="@item.InstagramUrl" class="instagram">
                                                    <span class="fa fa-instagram"></span>
                                                </a>
                                            </li>
                                            <li>
                                                <a href="@item.TwitterUrl" class="twitter">
                                                    <span class="fa fa-twitter"></span>
                                                </a>
                                            </li>
                                        </ul>
                                    </div>
                                </a>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</section>