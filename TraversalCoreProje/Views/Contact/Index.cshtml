@model DTOLayer.DTOs.ContactDTOs.SendMessageDTO
@using EntityLayer.Concrete
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout.cshtml";
    var contactModel = ViewData["ContactModel"] as Contact;
    var contactList = ViewData["ContactList"] as List<Contact>;
}

<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">Bize Ulaşın</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        @foreach (var item in contactList)
        {
            <div class="container py-lg-3">
                <div class="contact-grids row">
                    <div class="col-lg-6 contact-left">
                        <div class="partners">
                            <div class="cont-details">
                                <h5>İletişim Bilgilerimiz</h5>
                                <p class="mt-3 mb-4">@item.Description</p>
                            </div>
                            <div class="hours">
                                <h6 class="mt-4">Email:</h6>
                                <p>
                                    <a id="emailLink" href="mailto:@item.Mail">
                                        @item.Mail
                                    </a>
                                </p>
                                <h6 class="mt-4">Ofis:</h6>
                                <p> @item.Adress</p>
                                <h6 class="mt-4">Telefon:</h6>
                                <p class="margin-top"><a href="tel:@item.Phone">@item.Phone</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                        <form method="post" class="signin-form">
                            <div class="input-grids">
                                <div class="form-group">
                                    <input type="text" placeholder="Adınız*" asp-for="Name" class="contact-input" />
                                    <span class="text-danger" asp-validation-for="Name"></span>
                                </div>
                                <div class="form-group">
                                    <input type="email" placeholder="Email*" asp-for="Email" class="contact-input" required="" />
                                    <span class="text-danger" asp-validation-for="Email"></span>
                                </div>
                                <div class="form-group">
                                    <input type="text" placeholder="Konu*" asp-for="Subject" class="contact-input" />
                                    <span class="text-danger" asp-validation-for="Subject"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <textarea placeholder="Mesaj*" asp-for="MessageBody" required=""></textarea>
                                <span class="text-danger" asp-validation-for="MessageBody"></span>
                            </div>
                            <div class="text-right">
                                <button class="btn btn-style btn-primary">Mesaj Gönder</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="map mt-5 pt-md-5">
                    <h5>Harita</h5>
                    <iframe src="@item.MapLocation" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div>
        }
    </div>
</section>
<!-- /contact-form -->
<script>
    document.getElementById("emailLink").href = "mailto:" + item.Mail;
</script>