@model DTOLayer.DTOs.AppUserDTOs.AppUserRegisterDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="zxx">
<head>
    <title>Traversal Misafir Kayıt Ekranı</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8" />
    <meta name="keywords" content="Invent Signup Form Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, Smartphone Compatible web template, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta tag Keywords -->
    <!--/Style-CSS -->
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css" media="all" />
    <!--//Style-CSS -->
</head>
<body>
    <!-- /login-section -->
    <section class="w3l-login-6">
        <div class="login-hny">
            <div class="form-content">
                <div class="form-right">
                    <div class="overlay">
                        <div class="grid-info-form">
                            <h5>Traversal Rezervasyon</h5>
                            <h3>Hesap Oluşturun</h3>
                            <p>
                                Birbirinden deneyimli rehberlerimiz eşliğinde İskandinav ülkelerinin soğuğunu,Akdeniz ülkelerinin sıcaklığını,
                                güzel ülkemizin Kapadokya dan Sürmene ye,Ölüdeniz den Asos a,Balkan turundan mısır çöllerine kadar aklınıza gelen her yere
                                bir tık uzaktayız.Seyahatlerimize katılmak için hemen kayıt olun...
                            </p>
                            <a href="/Login/Singin/" class="read-more-1 btn"><span>Eğer kaydınız varsa </span>Hadi Başlayalım</a>
                        </div>
                    </div>
                </div>
                <div class="form-left">
                    <div class="middle">
                        <h4>Bize katılın</h4>
                        <p>Hemen ücretsiz bir şekilde hesap oluşturun.</p>
                    </div>
                    <form method="post" class="signin-form">
                        <div class="form-input">
                            <label>Adınız</label>
                            <input type="text" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Soyadınız</label>
                            <input type="text" asp-for="SurName" />
                            <span asp-validation-for="SurName" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Kullanıcı Adınız</label>
                            <input type="text" asp-for="UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Cinsiyetiniz</label>
                            <select class="form-select" asp-for="Gender"
                                    style="background: #fff;
                                           outline: none;
                                           width: 100%;
                                           font-size: 17px;
                                           padding: 10px 15px;
                                           color: #090e0d;
                                           border: 2px solid #BECED0;">
                                <option>Cinsiyet Seçiniz</option>
                                <option>Erkek</option>
                                <option>Kadın</option>
                                <option>Belirtmek İstemiyorum</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Email Adresiniz</label>
                            <input type="text" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre</label>
                            <input type="password" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-input">
                            <label>Şifre Doğrula</label>
                            <input type="password" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <label class="container">
                            Şartları okudum<a href="#">kabul ediyorum.</a>
                            <input type="checkbox">
                            <span class="checkmark"></span>
                        </label>
                        <button class="btn">Kayıt Ol</button>
                    </form>
                    <div class="copy-right text-center">
                        <p>
                            © @DateTime.Now.Year Tüm hakları saklıdır.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- //login-section -->
</body>
</html>