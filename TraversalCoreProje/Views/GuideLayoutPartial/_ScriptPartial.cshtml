<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Sayfa yüklendiğinde aktif menüyü kontrol et
        var currentPath = window.location.pathname;
        var menuElements = document.querySelectorAll('.navigation-main .nav-item');

        menuElements.forEach(function (item) {
            var link = item.querySelector('a').getAttribute('href');
            if (currentPath === link) {
                item.classList.add('active');
                localStorage.setItem('activeMenuItem', link);
            }
        });
    });

    function activateMenu(element) {
        // Önceki aktif öğeyi temizle
        var previousActive = document.querySelector('.navigation-main .nav-item.active');
        if (previousActive) {
            previousActive.classList.remove('active');
        }

        // Yeni öğeyi aktif hale getir
        element.parentElement.classList.add('active');

        // Tıklanan menü öğesini localStorage'de sakla
        var menuItemId = element.getAttribute('href');
        localStorage.setItem('activeMenuItem', menuItemId);
    }
</script>
