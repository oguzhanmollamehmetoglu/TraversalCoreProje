<script>
    document.addEventListener("DOMContentLoaded", function () {
        // İkinci dropdown listesini tetikleyen elementi seç
        var dropdownToggle2 = document.querySelector('.dropdown-toggle2');

        // İkinci dropdown listesini seç
        var dropdownMenu2 = document.querySelector('.dropdown-menu2');

        // İkinci dropdown listesinin linklerini seç
        var dropdownItems2 = dropdownMenu2.querySelectorAll('.dropdown-item');

        // Dropdown tetikleyiciye tıklandığında
        dropdownToggle2.addEventListener('click', function (event) {
            event.preventDefault();

            // İkinci dropdown menüsünün görünürlüğünü tersine çevir
            dropdownMenu2.classList.toggle('show');
        });

        // Dışarı tıklama olayını dinle (ikinci dropdown menüsünün kapatılması için)
        document.addEventListener('click', function (event) {
            // Eğer tıklanan element ikinci dropdown menüsü veya tetikleyici değilse
            if (!dropdownMenu2.contains(event.target) && !dropdownToggle2.contains(event.target)) {
                // İkinci dropdown menüsünün görünürlüğünü kapat
                dropdownMenu2.classList.remove('show');
            }
        });

        // İkinci dropdown listesinin linklerine tıklama olaylarını ekle
        dropdownItems2.forEach(function (item) {
            item.addEventListener('click', function (event) {
                event.preventDefault();

                // Seçilen dilin bağlantısına yönlendir
                var link = item.getAttribute('href');
                window.location.href = link;
            });
        });
    });
</script>