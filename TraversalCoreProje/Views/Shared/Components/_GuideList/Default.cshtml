@using EntityLayer.Concrete
@model List<Guide>

<div class="col-12 col-xl-4" style="margin-bottom:15px;">
    <div class="card h-100">
        <div class="card-header pb-0 p-3">
            <h6 class="mb-0">Tur Rehberlerimiz</h6>
        </div>
        <div class="card-body p-3">
            <ul class="list-group">
                @foreach (var item in Model)
                {
                    <li class="list-group-item border-0 d-flex align-items-center px-0 mb-2">
                        <div class="avatar me-3">
                            <img src="/userimages/@item.Image" alt="kal" class="border-radius-lg shadow" style="width:40px; height:40px; border-radius:1.75rem;">
                        </div>
                        <div class="d-flex align-items-start flex-column justify-content-center">
                            <h6 class="mb-0 text-sm">@item.Name</h6>
                            <p class="mb-0 text-xs">
                                @item.Description2.Substring(0, item.Description2.Substring(0, 20).LastIndexOf(" "))...
                            </p>
                        </div>
                        <a class="btn btn-link pe-3 ps-0 mb-0 ms-auto" href="/Guide/GuideDetails/@item.GuideID">Detay</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>