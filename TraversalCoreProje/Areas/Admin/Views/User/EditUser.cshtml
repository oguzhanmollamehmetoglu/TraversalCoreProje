@model DTOLayer.DTOs.AppUserDTOs.AdminUserEditViewDTO
@{
    ViewData["Title"] = "EditUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header">Profil Güncelleme Sayfası</h5>
                <!-- Account -->
                <form method="post" class="signin-form" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ıd" />
                     <div class="card-body">
                        <div class="d-flex align-items-start align-items-sm-center gap-4">
                        @if(Model.imgurl != null)
                        {
                            <img src="/userimages/@Model.imgurl"
                                 class="d-block rounded"
                                 height="100"
                                 width="100" />
                        }
                        <div class="button-wrapper">
                            <label class="btn btn-primary me-2 mb-4" tabindex="0">
                                <span class="d-none d-sm-block">Yeni resim yükleyin</span>
                                <i class="bx bx-upload d-block d-sm-none"></i>
                                <input type="file"
                                       class="account-file-input"
                                       hidden
                                       accept="image/png, image/jpeg"
                                       asp-for="ımage" />
                            </label>
                            <p class="text-muted mb-0">Format JPG veya PNG. Max boyutu 800KB</p>
                        </div>
                    </div>
                     </div>
                <hr class="my-0" />
                <div class="card-body">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="firstName" class="form-label">Adınız</label>
                                <input class="form-control"
                                       type="text"
                                       required
                                       asp-for="name" />
                                <span asp-validation-for="name" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Soyadınız</label>
                                <input class="form-control" type="text" asp-for="surname" />
                                <span asp-validation-for="surname" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">E-mail</label>
                                <input class="form-control"
                                       type="email"
                                       required
                                       asp-for="mail" />
                                <span asp-validation-for="mail" class="text-danger"></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="organization" class="form-label">Kullanıcı Adınız</label>
                                <input type="text"
                                       class="form-control"
                                       required
                                       asp-for="username" />
                                <span asp-validation-for="username" class="text-danger "></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label" >Telefon Numaranız</label>
                                <div class="input-group input-group-merge">
                                    <span class="input-group-text">TR (+90)</span>
                                    <input type="text" class="form-control" required asp-for="phonenumber"/>
                                    <span asp-validation-for="phonenumber" class="text-danger "></span>
                                </div>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Cinsiyetiniz</label>
                                <select class="form-select" required asp-for="gender">
                                    <option>Erkek</option>
                                    <option>Kadın</option>
                                    <option>Belirtmek İstemiyorum</option>
                                </select>
                                <span asp-validation-for="gender" class="text-danger "></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Şifreniz</label>
                                <input class="form-control" type="password" required asp-for="password" />
                                <span asp-validation-for="password" class="text-danger "></span>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label class="form-label">Şifre Tekrar</label>
                                <input type="password"
                                       class="form-control"
                                       required
                                       asp-for="confirmpassword"/>
                                <span asp-validation-for="confirmpassword" class="text-danger"></span>
                            </div>


