@model DTOLayer.DTOs.AppUserDTOs.AdminUserEditViewDTO
@{
    ViewData["Title"] = "AdminProfile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content -->
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header" style="text-align: center;">Profil Detayları</h5>
                <!-- Account -->
                <div class="card-body">
                    <div class="d-flex align-items-start align-items-sm-center gap-4" style="justify-content: center;">
                        @if (Model.imgurl != null)
                        {
                            <img src="/userimages/@Model.imgurl"
                                 class="d-block rounded"
                                 height="200"
                                 width="200" />
                        }
                    </div>
                </div>
                <hr class="my-0" />
                <div class="card-body">
                    <div class="row" style="text-align: center;">
                        <div class="mb-3 col-md-12">
                            <label for="firstName" class="form-label">Adınız</label>
                            <input class="form-control"
                                   type="text"
                                   required
                                   asp-for="name"
                                   readonly
                                   style="text-align: center;" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label">Soyadınız</label>
                            <input class="form-control" type="text" asp-for="surname" readonly style="text-align: center;" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label">E-mail</label>
                            <input class="form-control"
                                   type="email"
                                   required
                                   asp-for="mail"
                                   readonly
                                   style="text-align: center;" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label for="organization" class="form-label">Kullanıcı Adınız</label>
                            <input type="text"
                                   class="form-control"
                                   required
                                   asp-for="username"
                                   readonly
                                   style="text-align: center;" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label">Telefon Numaranız</label>
                            <input type="text" class="form-control" required asp-for="phonenumber" readonly style="text-align: center;" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label">Cinsiyetiniz</label>
                            <input class="form-control" required asp-for="gender" readonly style="text-align: center;" />
                        </div>
                        <div class="mb-3 col-md-12">
                            <label class="form-label">Şifreniz</label>
                            <input class="form-control" type="text" required asp-for="password" readonly style="text-align: center;" />
                        </div>
                    </div>
                </div>
                <!-- /Account -->
            </div>
        </div>
    </div>
</div>
<!-- / Content -->        