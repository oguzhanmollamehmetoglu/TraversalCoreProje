@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "CommentUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h1 class="card-header">Yorum Listesi</h1>
    <div class="card-body">
        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Kullanıcı</th>
                        <th>Rota</th>
                        <th>Tarih</th>
                        <th>Sil</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.CommentUser</td>
                            <td>@item.Destiantion.City</td>
                            <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                            <td><a href="/Admin/User/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Sil</a></td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <span>Herhangi bir yorum bulunamadı.</span>
            </div>
        }
    </div>
</div>