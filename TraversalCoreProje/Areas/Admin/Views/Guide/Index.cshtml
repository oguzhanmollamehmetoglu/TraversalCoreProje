@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h1 class="card-header">Rehber Listesi</h1>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Ad-Soyad</th>
                    <th>İnstagram Url</th>
                    <th>Twiter Url</th>
                    <th>Açıklama</th>
                    <th>Küçük Resim</th>
                    <th>Durum</th>
                    <th>Düzenle</th>
                </tr>
                @foreach (var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td><img src="/userimages/@item.Image" height="50" width="50" /></td>
                        <td>@item.Name</td>
                        <td>@item.InstagramUrl</td>
                        <td>@item.TwitterUrl</td>
                        <td>@item.Description</td>
                        <td><img src="/userimages/@item.GuideListImage" height="50" width="50" /></td>
                        @{
                            if (item.Status == true)
                            {
                                <td><a href="/Admin/Guide/ChangeToFalse/@item.GuideID" class="btn btn-outline-warning">Pasif Yap</a></td>
                            }
                            else
                            {
                                <td><a href="/Admin/Guide/ChangeToTrue/@item.GuideID" class="btn btn-outline-info">Aktif Yap</a></td>
                            }
                        }
                        <td><a href="/Admin/Guide/EditGuide/@item.GuideID" class="btn btn-outline-success">Düzenle</a></td>
                    </tr>
                }
            </table>
        </div>
        <a href="/Admin/Guide/GuideList/" class="btn btn-outline-primary">Rehber Adayları</a>
    </div>
</div>