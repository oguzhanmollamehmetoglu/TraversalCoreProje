@model DTOLayer.DTOs.GuideDTOs.GuideViewDTO
@{
    ViewData["Title"] = "EditGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h1 class="card-header">Rehber Güncelleme Sayfası</h1>
    <div class="card-body">
        <form method="post" enctype="multipart/form-data">
            @Html.HiddenFor(x => x.GuideID)
            <div class="form-group">
                @Html.Label("Ad-Soyad")
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.Label("İnstagram Url")
                <input type="text" asp-for="InstagramUrl" class="form-control" />
                <span asp-validation-for="InstagramUrl" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.Label("Küçük Resim")
                @if (Model.Image != null)
                {
                    <img width="60" height="60" src="/userimages/@Model.Image" />
                    <input type="hidden" asp-for="Image" class="form-control" />
                }
                <input type="file" asp-for="ImageFile" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.Label("Twitter Url")
                <input type="text" asp-for="TwitterUrl" class="form-control" />
                <span asp-validation-for="TwitterUrl" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.Label("Görsel")
                @if (Model.GuideListImage != null)
                {
                    <img width="60" height="60" src="/userimages/@Model.GuideListImage" />
                    <input type="hidden" asp-for="GuideListImage" class="form-control" />
                }
                <input type="file" asp-for="ImageFile2" class="form-control" />
                <span asp-validation-for="GuideListImage" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.Label("Şehir")
                <textarea cols="30" rows="5" class="form-control" asp-for="Description"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                @Html.Label("Açıklama")
                <textarea cols="30" rows="5" class="form-control" asp-for="Description2"></textarea>
                <span asp-validation-for="Description2" class="text-danger"></span>
            </div>
            <br />
            <button class="btn btn-outline-primary">Güncelle</button>
        </form>
    </div>
</div>