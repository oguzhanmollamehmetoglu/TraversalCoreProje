@model List<VisitorViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h1 class="card-header">Api Ziyaretçi Listesi</h1>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Ad</th>
                    <th>Soyad</th>
                    <th>Ülke</th>
                    <th>Şehir</th>
                    <th>Mail</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.VisitorID</td>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.Mail</td>
                        <td><a href="/Admin/VisitorApi/DeleteVisitor/@item.VisitorID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/VisitorApi/UpdateVisitor/@item.VisitorID" class="btn btn-outline-primary">Güncelle</a></td>
                    </tr>
                }
            </table>
        </div>
        <a href="/Admin/VisitorApi/AddVisitor/" class="btn btn-outline-success">Yeni ziyaretçi girişi</a>
    </div>
</div>