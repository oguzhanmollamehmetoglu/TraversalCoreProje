@using EntityLayer.Concrete
@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h1 class="card-header">Yorum Listesi</h1>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Kullanıcı</th>
                    <th>Rota</th>
                    <th>Tarih</th>
                    <th>Sil</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CommentID</td>
                        <td>@item.CommentUser</td>
                        <td>@item.Destiantion.City</td>
                        <td>@(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))</td>
                        <td><a href="/Admin/Comment/DeleteComment/@item.CommentID" class="btn btn-outline-danger">Sil</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>