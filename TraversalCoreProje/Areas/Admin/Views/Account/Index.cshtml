@model AccountViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h1 class="card-header">Unite Of Work Personel Prime Transferi</h1>
    <div class="card-body">
        <form method="post">
            <label>Gönderen</label>
            <input type="text" asp-for="SenderID" class="form-control" />
            <br />
            <label>Alıcı</label>
            <input type="text" asp-for="ReceiverID" class="form-control" />
            <br />
            <label>Miktar</label>
            <input type="text" asp-for="Amount" class="form-control" />
            <br />
            <button class="btn btn-outline-warning">Hesaba Aktar</button>
        </form>
    </div>
</div>