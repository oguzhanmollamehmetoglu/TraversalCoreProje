@using DTOLayer.DTOs.AppRoleDTOs
@model List<RoleAssignViewDTO>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h1 class="card-header">Rol Atama Sayfası</h1>
    <div class="card-body">
        <form method="post">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
                    <label class="form-checck-label" for="@Model[i].RoleExist">@Model[i].RoleName</label>
                </div>
            }
            <button class="btn btn-outline-primary">Değişiklikleri Kaydet</button>
        </form>
    </div>
</div>