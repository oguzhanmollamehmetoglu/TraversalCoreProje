@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="card">
    <h1 class="card-header">Role Listesi</h1>
    <div class="card-body">
        @if (Model.Count > 0)
        {
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.Name</td>
                            <td><a href="/Admin/Role/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                            <td><a href="/Admin/Role/UpdateRole/@item.Id" class="btn btn-outline-primary">Güncelle</a></td>
                        </tr>
                    }
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning">
                <span>Herhangi bir rol bulunamadı.</span>
            </div>
        }
        <a href="/Admin/Role/CreateRole/" class="btn btn-outline-success">Rol Oluştur</a>
    </div>
</div>