@model List<DTOLayer.DTOs.AnnouncementDTOs.AnnouncementListDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h1 class="card-header">Duyuru Listesi</h1>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered">
                <tr>
                    <th>#</th>
                    <th>Başlık</th>
                    <th>İçerik</th>
                    <th>Sil</th>
                    <th>Güncelle</th>
                    <th>Abonelere Duyur</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AnnouncementID</td>
                        <td>@item.Title</td>
                        <td>@item.Content</td>
                        <td><a href="/Admin/Announcement/DeleteAnnouncement/@item.AnnouncementID" class="btn btn-outline-danger">Sil</a></td>
                        <td><a href="/Admin/Announcement/UpdateAnnouncement/@item.AnnouncementID" class="btn btn-outline-primary">Güncelle</a></td>
                        <td><a href="/Admin/Announcement/SendMail/@item.AnnouncementID" class="btn btn-outline-info">Abonelere Duyur</a></td>
                    </tr>
                }
            </table>
        </div>
        <a href="/Admin/Announcement/AddAnnouncement/" class="btn btn-outline-success">Duyuru Oluştur</a>
    </div>
</div>