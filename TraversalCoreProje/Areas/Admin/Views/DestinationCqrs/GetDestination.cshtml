@model GetDestinationByİdQueryResult
@{
    ViewData["Title"] = "GetDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h1 class="card-header">Tur lokasyonu düzenleme sayfası</h1>
    <div class="card-body">
        <form method="post">
            <input type="hidden" asp-for="Destinationİd" />
            <label>Şehir</label>
            <input type="text" asp-for="City" class="form-control" />
            <br />
            <label>Gün-Gece</label>
            <input type="text" asp-for="DayNight" class="form-control" />
            <br />
            <label>Fiyat</label>
            <input type="text" asp-for="Price" class="form-control" />
            <br />
            <label>Kapasite</label>
            <input type="text" asp-for="Capacity" class="form-control" />
            <br />
            <button class="btn btn-outline-primary">Güncelle</button>
        </form>
    </div>
</div>