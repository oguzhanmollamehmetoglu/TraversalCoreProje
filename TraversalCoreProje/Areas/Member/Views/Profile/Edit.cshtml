@model DTOLayer.DTOs.AppUserDTOs.UserEditViewDTO
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="app-content content">
    <div class="content-wrapper">
        <div class="content-wrapper-before"></div>
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header" style="margin-bottom: -25px;">
                            <h4 class="card-title">Profil Düzenleme Sayfası</h4>
                            <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                            <div class="heading-elements">
                                <ul class="list-inline mb-0">
                                    <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                    <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                    <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                    <li><a data-action="close"><i class="ft-x"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-content collapse show">
                            <div class="card-body">
                                <p class="card-text">Web sitemiz traversal üzerinde profil güncelleme sayfası.</p>
                                <form method="post" enctype="multipart/form-data">
                                    @Html.Label("Adınız")
                                    <input type="text" asp-for="name" class="form-control" />
                                    <span asp-validation-for="name" class="text-danger"></span>
                                    <br />
                                    @Html.Label("Soyadınız")
                                    <input type="text" asp-for="surname" class="form-control" />
                                    <span asp-validation-for="surname" class="text-danger"></span>
                                    <br />
                                    @Html.Label("Mailiniz")
                                    <input type="text" asp-for="mail" class="form-control" />
                                    <span asp-validation-for="mail" class="text-danger"></span>
                                    <br />
                                    @Html.Label("Telefon Numaranız")
                                    <input type="text" asp-for="phonenumber" class="form-control" />
                                    <span asp-validation-for="phonenumber" class="text-danger"></span>
                                    <br />
                                    @Html.Label("Şifreniz")
                                    <input type="text" asp-for="password" class="form-control" />
                                    <span asp-validation-for="password" class="text-danger"></span>
                                    <br />
                                    @Html.Label("Şifrenizi Onaylayın")
                                    <input type="text" asp-for="confirmpassword" class="form-control" />
                                    <span asp-validation-for="confirmpassword" class="text-danger"></span>
                                    <br />
                                    <div class="form-group">
                                        <label>Resim Seçin</label>
                                        <img width="60" height="60" src="/userimages/@Model.imgurl" />
                                        <input type="file" asp-for="ımage" />
                                        <span asp-validation-for="ımage" class="text-danger"></span>
                                    </div>
                                    <br />
                                    <button class="btn btn-primary">Bilgileri Güncelle</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>