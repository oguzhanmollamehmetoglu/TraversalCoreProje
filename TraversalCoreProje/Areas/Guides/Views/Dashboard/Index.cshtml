@model DTOLayer.DTOs.GuideDTOs.GuideViewDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_GuideLayout.cshtml";
}

<div class="container-fluid">
    <img src="~/soft-ui-dashboard/assets/img/curved-images/curved-11-1.jpg" class="page-header min-height-300 border-radius-xl" style="background-position-y: 50%; width:-webkit-fill-available; border-radius: 20px;">
    <span class="mask bg-gradient-primary opacity-6"></span>
    <div class="card card-body blur shadow-blur mx-4 mt-n6 overflow-hidden">
        <div class="row gx-4">
            <div class="col-auto">
                <div class="avatar avatar-xl position-relative">
                    <img src="/userimages/@ViewBag.İmgUrl" alt="profile_image" style="height:70px; width:70px;" class="border-radius-lg shadow-sm">
                </div>
            </div>
            <div class="col-auto my-auto">
                <div class="h-100">
                    <h5>
                        @ViewBag.userName
                    </h5>
                    <p class="mb-0 font-weight-bold text-sm">
                        Traversal / Star Rehber
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <!-- Statistics -->
        <div class="row match-height">
            <div class="col-xl-4 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title" id="heading-multiple-thumbnails">Profil Bilgileri</h4>
                        <a class="heading-elements-toggle">
                            <i class="la la-ellipsis-v font-medium-3"></i>
                        </a>
                    </div>
                    <div class="card-content">
                        <div class="card-body">
                            <p class="text-sm">
                                Traversal Rezervasyon rehber paneline hoş geldiniz,sol tarafta bulunan menüler üzerinden işlemlerinizi yapabilirsiniz.
                            </p>
                            <hr class="horizontal gray-light my-4">
                            <ul class="list-group p-1">
                                <li class="list-group-item border-0 ps-0 pt-0 text-sm"><strong class="text-dark">Ad Soyad:</strong> &nbsp; @ViewBag.userName</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Telefon:</strong> &nbsp; @ViewBag.tel</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Email:</strong> &nbsp; @ViewBag.mail</li>
                                <li class="list-group-item border-0 ps-0 text-sm"><strong class="text-dark">Konum:</strong> &nbsp; Türkiye</li>
                                <li class="list-group-item border-0 ps-0 pb-0">
                                    <strong class="text-dark text-sm">Sosyal Medya:</strong> &nbsp;
                                    <a class="btn btn-twitter btn-simple mb-0 ps-1 pe-2 py-0" href="">
                                        <i class="fab fa-twitter fa-lg"></i>
                                    </a>
                                    <a class="btn btn-instagram btn-simple mb-0 ps-1 pe-2 py-0" href="">
                                        <i class="fab fa-instagram fa-lg"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-12">
                <div class="card">
                    <div class="card-content">
                        <div class="card-body">
                            <h4 class="card-title">Son Tur Rotaları</h4>
                            <h6 class="card-subtitle text-muted">Bu alanda traversal şirketinin son rotaları bulunmaktadır.</h6>
                        </div>
                        <div id="carousel-area" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                <li data-target="#carousel-area" data-slide-to="0" class="active"></li>
                                <li data-target="#carousel-area" data-slide-to="1"></li>
                                <li data-target="#carousel-area" data-slide-to="2"></li>
                                <li data-target="#carousel-area" data-slide-to="3"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                @foreach (var item in Model.Destiantion)
                                {
                                    <div class="carousel-item @(item.Equals(Model.Destiantion.First()) ? "active" : "")">
                                        <img src="/userimages/@item.Image" class="d-block w-100" alt="Slide" style="height:300px;">
                                    </div>
                                }

                                @*  <div class="carousel-item">
                                <img src="/userimages/@ViewBag.s1" class="d-block w-100" alt="Second slide">
                                </div>
                                <div class="carousel-item">
                                <img src="/userimages/@ViewBag.s1" class="d-block w-100" alt="Third slide">
                                </div>
                                <div class="carousel-item">
                                <img src="/userimages/@ViewBag.s1" class="d-block w-100" alt="Fourth slide">
                                </div> *@
                            </div>
                            <a class="carousel-control-prev" href="#carousel-area" role="button" data-slide="prev">
                                <span class="la la-angle-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carousel-area" role="button" data-slide="next">
                                <span class="la la-angle-right icon-next" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                        <div class="card-body">
                            <a href="/Destination/Index/" class="card-link">Rotalar</a>
                        </div>
                    </div>
                    <div class="card-footer border-top-blue-grey border-top-lighten-5 text-muted">
                        <span class="float-left">Son 4 Rota</span>
                        <span class="tags float-right">
                            <span class="badge badge-pill badge-primary">Seyahat</span>
                            <span class="badge badge-pill badge-danger">Dünya</span>
                            <span class="badge badge-pill badge-dark">Gezgin</span>
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Tur Rehberleri</h4>
                        <a class="heading-elements-toggle">
                            <i class="fa fa-ellipsis-v font-medium-3"></i>
                        </a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li>
                                    <a data-action="reload">
                                        <i class="ft-rotate-cw"></i>
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-content">
                        <div id="recent-buyers" class="media-list">
                            @foreach (var item in Model.guides)
                            {
                                <a href="/Guide/GuideDetails/@item.GuideID" class="media border-0">
                                    <div class="media-left pr-1">
                                        <span class="avatar avatar-md avatar-online">
                                            <img class="media-object rounded-circle" src="/userimages/@item.Image" alt="Generic placeholder image" style="height:40px; width:40px;">
                                            <i></i>
                                        </span>
                                    </div>
                                    <div class="media-body w-100">
                                        <span class="list-group-item-heading">
                                            @item.Name
                                        </span>
                                        <ul class="list-unstyled users-list m-0 float-right">
                                            <li data-toggle="tooltip" data-popup="tooltip-custom" data-original-title="Product 1" class="avatar avatar-sm pull-up">
                                                <img class="media-object rounded-circle no-border-top-radius no-border-bottom-radius" src="~/guides/theme-assets/images/portfolio/portfolio-1.jpg"
                                                     alt="Avatar">
                                            </li>
                                            <li data-toggle="tooltip" data-popup="tooltip-custom" data-original-title="Product 2" class="avatar avatar-sm pull-up">
                                                <img class="media-object rounded-circle no-border-top-radius no-border-bottom-radius" src="~/guides/theme-assets/images/portfolio/portfolio-2.jpg"
                                                     alt="Avatar">
                                            </li>
                                            <li data-toggle="tooltip" data-popup="tooltip-custom" data-original-title="Product 3" class="avatar avatar-sm pull-up">
                                                <img class="media-object rounded-circle no-border-top-radius no-border-bottom-radius" src="~/guides/theme-assets/images/portfolio/portfolio-4.jpg"
                                                     alt="Avatar">
                                            </li>
                                        </ul>
                                        <p class="list-group-item-text mb-0">
                                            <span class="blue-grey lighten-2 font-small-3">@item.Description</span>
                                        </p>
                                    </div>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ Statistics -->
    </div>
</div>