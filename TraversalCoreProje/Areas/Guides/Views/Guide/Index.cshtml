@model DTOLayer.DTOs.GuideDTOs.GuideViewDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_GuideLayout.cshtml";
}

<div class="content-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="margin-bottom: -25px;">
                    <h4 class="card-title">Rehber İçerik Sayfası</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <p class="card-text">Web sitemiz traversal üzerinde rehber içerik sayfası.</p>
                        <form method="post">
                            <div class="form-group">
                                @Html.Label("Görsel")
                                <img width="60" height="60" src="/userimages/@Model.GuideListImage" />
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.Label("Küçük Resim")
                                <img width="60" height="60" src="/userimages/@Model.Image" />
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.Label("Ad-Soyad")
                                <input type="text" value="@Model.Name" readonly class="form-control" />
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.Label("İnstagram Url")
                                <input type="text" value="@Model.InstagramUrl" readonly class="form-control" />
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.Label("Twitter Url")
                                <input type="text" value="@Model.TwitterUrl" readonly class="form-control" />
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.Label("Şehir")
                                <textarea cols="30" rows="5" readonly class="form-control">@Model.Description</textarea>
                            </div>
                            <br />
                            <div class="form-group">
                                @Html.Label("Açıklama")
                                <textarea cols="30" rows="5" readonly class="form-control">@Model.Description2</textarea>
                            </div>
                            <br />
                            <a href="/Guides/Guide/EditGuide/" class="btn btn-primary">Bilgileri Düzenle</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>