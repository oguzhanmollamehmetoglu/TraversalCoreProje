@model DTOLayer.DTOs.GuideDTOs.GuideProfileEditViewDTO
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_GuideLayout.cshtml";
}

<div class="content-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="margin-bottom: -25px;">
                    <h4 class="card-title">Profil Düzenleme Sayfası</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <p class="card-text">Web sitemiz traversal üzerinde profil güncelleme sayfası.</p>
                        <form method="post" enctype="multipart/form-data">
                            @Html.Label("Adınız")
                            <input type="text" asp-for="Name" class="form-control" />
                            <br />
                            @Html.Label("Soyadınız")
                            <input type="text" asp-for="Surname" class="form-control" />
                            <br />
                            @Html.Label("Mailiniz")
                            <input type="text" asp-for="Mail" class="form-control" />
                            <br />
                            @Html.Label("Telefon Numaranız")
                            <input type="text" asp-for="PhoneNumber" class="form-control" />
                            <br />
                            @Html.Label("Şifreniz")
                            <input type="text" asp-for="Password" class="form-control" />
                            <br />
                            @Html.Label("Şifrenizi Onaylayın")
                            <input type="text" asp-for="ConfirmPassword" class="form-control" />
                            <br />
                            <div class="form-group">
                                <label>Resim Seçin</label>
                                <img width="60" height="60" src="/userimages/@Model.İmgUrl" />
                                <input type="file" asp-for="ImageFile" />
                            </div>
                            <br />
                            <button class="btn btn-primary">Bilgileri Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>