@model DTOLayer.DTOs.GuideDTOs.GuideProfileEditViewDTO
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_GuideLayout.cshtml";
}

<div class="content-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="margin-bottom: -25px;">
                    <h4 class="card-title">Profil Sayfası</h4>
                    <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                    <div class="heading-elements">
                        <ul class="list-inline mb-0">
                            <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                            <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                            <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                            <li><a data-action="close"><i class="ft-x"></i></a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body">
                        <p class="card-text">Web sitemiz traversal üzerinde profil sayfası.</p>
                        <form method="post">
                            @Html.Label("Adınız")
                            <input type="text" value="@Model.Name" readonly class="form-control" />
                            <br />
                            @Html.Label("Soyadınız")
                            <input type="text" value="@Model.Surname" readonly class="form-control" />
                            <br />
                            @Html.Label("Mailiniz")
                            <input type="text" value="@Model.Mail" readonly class="form-control" />
                            <br />
                            @Html.Label("Telefon Numaranız")
                            <input type="text" value="@Model.PhoneNumber" readonly class="form-control" />
                            <br />
                            <div class="form-group">
                                <label>Resiminiz</label>
                                <img width="60" height="60" src="/userimages/@Model.İmgUrl" />
                            </div>
                            <br />
                            <a href="/Guides/Profile/Edit/" class="btn btn-primary">Profili Düzenle</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>